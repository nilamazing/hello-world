pipeline{
    agent any
    stages{
        stage('Build code'){
            steps{
                sh '/opt/maven/bin/mvn -f pom.xml clean package'
            }
        }
    }
    post{
        success{
            archiveArtifacts artifacts: '**/*.war'
        }
    }
    stages{
        stage('Deploy to Staging'){
            steps{
                build 'Deploy_Application_Staging'
            }
        }
    }
}